<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--  <preCondition>-->
    <!--    <preConditionName  preConditionAttribute="value">-->
    <!--  </preCondition>-->

    <changeSet id="USER-1" author="benfro" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="1">SELECT count(*) FROM pg_database WHERE datname = 'person_service';</sqlCheck>
            </not>
        </preConditions>
        <sql>CREATE DATABASE person_service;</sql>
    </changeSet>
    <changeSet id="USER-2" author="benfro">
        <createTable tableName="person">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="person_pk"/>
            </column>
            <column name="first_name" type="TEXT"/>
            <column name="last_name" type="TEXT"/>
            <column name="email" type="TEXT"/>
        </createTable>
        <createSequence sequenceName="person_id_seq" startValue="1000" incrementBy="1"/>
    </changeSet>
    <changeSet id="USER-3" author="benfro">
        <addColumn tableName="person">
            <column name="person_id" type="uuid" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
